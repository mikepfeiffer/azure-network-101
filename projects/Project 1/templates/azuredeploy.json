  "contentVersion": "1.0.0.0",
  "parameters": {
      "sql_server_name": {
          "defaultValue": "SQL",
          "type": "String"
      },
      "web_server_name": {
          "defaultValue": "WEB",
          "type": "String"
      },
      "admin_username": {
          "defaultValue": "sysadmin",
          "type": "String"
      },
      "admin_password": {
          "defaultValue": "P@ssw0rd2020",
          "type": "secureString"
      }    
  },
  "variables": {},
  "resources": [
      {
          "type": "Microsoft.Network/networkSecurityGroups",
          "apiVersion": "2020-11-01",
          "name": "SQL-NSG",
          "location": "westus2",
          "properties": {
              "securityRules": [
                  {
                      "name": "SSH",
                      "properties": {
                          "protocol": "TCP",
                          "sourcePortRange": "*",
                          "destinationPortRange": "22",
                          "sourceAddressPrefix": "*",
                          "destinationAddressPrefix": "*",
                          "access": "Allow",
                          "priority": 300,
                          "direction": "Inbound",
                          "sourcePortRanges": [],
                          "destinationPortRanges": [],
                          "sourceAddressPrefixes": [],
                          "destinationAddressPrefixes": []
                      }
                  }
              ]
          }
      },
      {
          "type": "Microsoft.Network/networkSecurityGroups",
          "apiVersion": "2020-11-01",
          "name": "WEB-NSG",
          "location": "westus2",
